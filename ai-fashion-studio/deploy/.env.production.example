# ====== Server (NestJS) ======
NODE_ENV=production
PORT=5000

# Postgres 连接串（容器内访问建议使用服务名，例如 postgres）
DATABASE_URL=postgresql://admin:password@postgres:5432/fashion_studio?schema=public

# 强随机字符串（至少 32 位），示例生成方式：
# openssl rand -base64 48
JWT_SECRET=PLEASE_CHANGE_ME

# 用于加密模型配置等敏感设置（32 bytes base64）
# openssl rand -base64 32
SETTINGS_ENCRYPTION_KEY=PLEASE_CHANGE_ME

# 邀请码开关：true=注册必须邀请码；false=开放注册
INVITE_CODE_REQUIRED=true

# CORS 白名单（逗号分隔）
CORS_ORIGINS=https://aizhao.icu,https://www.aizhao.icu,https://admin.aizhao.icu

# 生产环境首次启动需要引导创建管理员（至少 12 位密码）
BOOTSTRAP_ADMIN_USERNAME=admin
BOOTSTRAP_ADMIN_PASSWORD=PLEASE_CHANGE_ME_TOO

# ====== Tencent COS (可选) ======
TENCENT_SECRET_ID=PLEASE_CHANGE_ME
TENCENT_SECRET_KEY=PLEASE_CHANGE_ME
COS_BUCKET=your-bucket-name-1234567890
COS_REGION=ap-beijing
# COS_CDN_DOMAIN=cdn.your-domain.com
# COS_UPLOAD_ACL=private

